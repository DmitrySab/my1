<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.My1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#B400D4</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--item name="android:textSize" >50dp</item-->

        <item name="android:textViewStyle">@style/BigTextView</item>
    </style>

    <style name="BigButton" parent="BigTextView">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@android:color/holo_blue_bright</item>
        <item name="background">@drawable/but_draw</item>
    </style>

    <style name="SmallButton" parent="BigButton">
        <item name="android:textSize">7sp</item>
        <item name="backgroundTint">@android:color/holo_green_light</item>
    </style>

    <style name="BigTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:colorPrimary" >@android:color/holo_green_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/red</item>
    </style>
</resources>